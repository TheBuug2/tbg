//function definitions 
void NPC() {
	int num = rand() % 100 + 1; //gets a number b/t 1-100
	if (num < 10)//10% chance
		cout << "" << endl;
	else if (num < 15)//5% chance
		cout << "" << endl;
	else if (num < 30)//15% chance
		cout << "" << endl;
	else if (num < 50) {//20% chance
		cout << "" << endl;

		inventory[4] = "medkit";
	}
	else//50% chance
		cout << "" << endl;
}

